{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "paths": {
      "@/*": [
        "src/renderer/*"
      ]
    },
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "electron"
  ],
  "include": [
    "src/**/*",
    "scripts/**/*",
    "test/**/*",
    "config/**/*"
  ]
}